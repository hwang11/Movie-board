{{>layout/header}}
<h2>영화 검색 결과</h2>
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>영화 제목</th>
        <th>개봉</th>
        <th>감독</th>
        <th>배우</th>
        <th>평점</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#movieItems}}
        <tr>
            <td><a href="{{link}}"> {{title}}</a></td>
            <td>{{pubDate}}</td>
            <td>{{director}}</td>
            <td>{{actor}}</td>
            <td>{{userRating}}</td>
        </tr>
    {{/movieItems}}
    </tbody>
</table>
<br>
<h2>블로그 검색 결과</h2>
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>포스팅 제목</th>
        <th>블로그명</th>
        <th>설명</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#blogItems}}
        <tr>
            <td><a href="{{link}}">{{title}}</a></td>
            <td><a href="{{bloggerlink}}">{{bloggername}}</a></td>
            <td>{{description}}</td>
        </tr>
    {{/blogItems}}
    </tbody>
</table>
{{>layout/footer}}